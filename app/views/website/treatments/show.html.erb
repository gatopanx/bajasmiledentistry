
<div class="container-fluid">
  <%= render 'website/partials/announcements', phones: @phones %>
</div>
<div class="container-fluid billboard-wrapper">
  <div class="row menu">
    <div class='container'>
      <%= render 'website/partials/primary_header', current_organization: @current_organization, treatments: @treatments %>
    </div>
  </div>

  <div class="row billboard d-flex">
    <div class='container align-self-center'>
      <div class='row'>
        <div class="col-6 video">
          <iframe src="<%= @treatment.url %>" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen="allowfullscreen"></iframe>
        </div>
        <div class="col-6 talk-with-us-wrapper">
          <%= render 'website/partials/talk_with_us' %>
        </div>
      </div>
    </div>
  </div>
</div>

<hr class="attention-helper">

<div class="container treatment">
  <div class="row">
    <div class="col-12">
      <h4><%= @treatment.name %></h4>
      <%= raw(@treatment.long_description) %>
    </div>
  </div>
</div>


<div class="container">
  <%= render 'website/partials/internal_testimonials', internal_testimonials: @internal_testimonials %>
  <%= render 'website/partials/external_testimonials', external_testimonials: @external_testimonials %>
</div>

<%= render 'website/partials/schedule_now' %>

<%= render 'website/partials/we_are_waiting_for_you' %>

<%= render 'website/partials/primary_footer', phones: @phones, current_organization: @current_organization %>
