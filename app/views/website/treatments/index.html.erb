<div class="container-fluid">
  <%= render 'website/partials/announcements', phones: @phones %>
</div>

<div class="container-fluid billboard-wrapper">
  <div class="row menu">
    <div class='container'>
      <%= render 'website/partials/primary_header', current_organization: @current_organization, treatments: @treatments %>
    </div>
  </div>
</div>

<div class="container treatments">
  <% @treatments.each_with_index do |treatment, index| %>
    <div class="row treatment">
      <div class="col-md-5 col-sm-12 video">
        <iframe src="<%= treatment.url %>" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
      </div>
      <div class="col-md-7 col-sm-12 texts">
        <a href='/treatments/<%= treatment.key %>'>
          <h3><%= treatment.name %></h3>
          <p><%= treatment.short_description %></p>
        </a>
      </div>
    </div>
  <% end %>
</div>

<%= render 'website/partials/schedule_now' %>

<%= render 'website/partials/primary_footer', phones: @phones, current_organization: @current_organization %>
