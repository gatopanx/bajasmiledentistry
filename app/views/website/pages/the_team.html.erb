<div class="container-fluid">
  <%= render 'website/partials/announcements', phones: @phones %>
</div>
<div class='container'>
  <%= render 'website/partials/primary_header', current_organization: @current_organization, treatments: @treatments %>
</div>


<div class="container dentist">
  <div class="row">
    <div class="col-6 image">
      <img src="<%= @primary_producer.primary_image.payload.url %>" alt="<%= @primary_producer.name %>" width="500" height="526">
    </div>
    <div class="col-6">
      <h4><%= @primary_producer.name %></h4>
      <%= raw(@primary_producer.biography) %>
    </div>
  </div>
</div>

<hr class="attention-helper">

<div class="container process">
  <div class="row">
    <div class="col-12">
      <h4>Our Process</h4>
      <h5>Our Facilities Are Design To Make You Feel Safe and Happy</h5>
    </div>
    <div class="col-12">
      <div class="row">
        <div class="col-3">
          <img src="/assets/tijuana-smile-dentistry-01.jpg" alt="Tijuana Smile Dentistry" width="200" height="200">
        </div>
        <div class="col-3">
          <img src="/assets/tijuana-smile-dentistry-02.jpg" alt="Tijuana Smile Dentistry" width="200" height="200">
        </div>
        <div class="col-3">
          <img src="/assets/tijuana-smile-dentistry-03.jpg" alt="Tijuana Smile Dentistry" width="200" height="200">
        </div>
        <div class="col-3">
          <img src="/assets/tijuana-smile-dentistry-04.jpg" alt="Tijuana Smile Dentistry" width="200" height="200">
        </div>
        <div class="col-3">
          <img src="/assets/tijuana-smile-dentistry-05.jpg" alt="Tijuana Smile Dentistry" width="200" height="200">
        </div>
        <div class="col-3">
          <img src="/assets/tijuana-smile-dentistry-06.jpg" alt="Tijuana Smile Dentistry" width="200" height="200">
        </div>
        <div class="col-3">
          <img src="/assets/tijuana-smile-dentistry-07.jpg" alt="Tijuana Smile Dentistry" width="200" height="200">
        </div>
        <div class="col-3">
          <img src="/assets/tijuana-smile-dentistry-08.jpg" alt="Tijuana Smile Dentistry" width="200" height="200">
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid schedule-now-wrapper">
  <div class='row'>
    <div class='container'>
      <div class='row'>
        <%= render 'website/partials/schedule_now' %>
      </div>
    </div>
  </div>
</div>

<hr class="attention-helper">

<div class="container team">
  <div class="row">
    <div class="col-12">
      <h4>Our Team</h4>
      <h5>We Are Here To Give Care To Your Smile</h5>
    </div>
    <div class="row image">
      <% @secondary_producers.each do |producer| %>
        <div class="col-3">
          <img src="<%= producer.primary_image.payload.url %>" alt="<%= producer.name %>" width="250" height="250" class="rounded-circle">
          <p><%= producer.name %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <%= render 'website/partials/external_testimonials', external_testimonials: @external_testimonials %>
</div>

<%= render 'website/partials/primary_footer', phones: @phones %>
