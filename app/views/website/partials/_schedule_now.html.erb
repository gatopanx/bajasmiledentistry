<div class="row schedule-now">
  <div class="col-12">
    <h2 class='title text-center'>Schedule Now</h2>
  </div>
  <div class="col-12">
    <form>
      <div class="form-row">
        <div class="form-group col-3">
          <input type="Name" class="form-control name" id="inputName" placeholder="Your Name">
        </div>
        <div class="form-group col-4">
          <input type="email" class="form-control email" id="inputEmail" placeholder="Your Email">
        </div>
        <div class="form-group col-3">
          <input type="Date" class="form-control date" id="inputDate" placeholder="Desired Date">
        </div>
        <div class="form-group col-2">
          <button type="submit" class="btn btn-primary button">Schedule</button>
        </div>
      </div>
    </form>
  </div>
</div>
